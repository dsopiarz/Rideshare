<%= render 'user_search_form' %>
<br/><br/>
<h2>User Matching Your Search</h2>
<br/>
<table>
  <thead>
    <tr>
      <th>User's Email</th>
      <th></th>
	  <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
		<td><%= user.active %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    