    <%= f.label :arrivelocation %><br>
    <%= f.text_field :arrivelocation %>
  </div>
  <div class="field datetimepicker">
   <%= f.label :departtime %><br>
   <%= f.text_field :departtime, :id=>"datetimepicker" %>
  </div>
  <div class="field datetimepicker2">
    <%= f.label :arrivetime %><br>
    <%= f.text_field :arrivetime, :id=>"datetimepicker2" %>
  </div>
  <div class="field">
    <%= f.label :seatsavailable %><br>
    <%= f.number_field :seatsavailable %>
  </div>
  <div class="field">
    <%= f.label :costperseat %><br>
    <%= f.text_field :costperseat %>
  </div>
  <div class="field">
    <%= f.label :preferences %><br>
    <%= f.text_area :preferences %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>


