<section id="show-ride" class="medium-5 large-4 column">
  <p id="notice"><%= notice %></p>

  <% if not @ride.userphoto.to_s.empty? %>
  <%= image_tag(@ride.userphoto, :alt => "Picture of Driver") %>
  <% else %>
  <%= image_tag("NoDriverPic.png", :alt => "Picture of Driver") %>
  <% end %>

  <p>
    <strong>Depart Location:</strong>
    <%= @ride.departlocation %>
  </p>

  <p>
    <strong>Arrive Location:</strong>
    <%= @ride.arrivelocation %>
  </p>

  <p>
    <strong>Depart Time:</strong>
    <%= @ride.departtime.to_time.strftime('%a, %b %d, %Y %l:%M%p') %>
  </p>

  <p>
    <strong>Arrive Time:</strong>
    <%= @ride.arrivetime.to_time.strftime('%a, %b %d, %Y %l:%M%p') %>
  </p>

  <p>
    <strong>Seats Available:</strong>
    <%= @ride.seatsavailable %>
  </p>

  <p>
    <strong>Cost Per Seat:</strong>
    <%= number_to_currency(@ride.costperseat) %>
  </p>

  <p>
    <strong>Smoking:</strong>
    <%= @ride.checked(@ride.smoking) %>
  </p>

  <p>
    <strong>Children:</strong>
    <%= @ride.checked(@ride.children) %>
  </p>

  <p>
    <strong>Preferences:</strong>
    <%= @ride.preferences %>
  </p>

  <p>
    <strong>Link to this Ride?</strong>
     <a href="<%= "http://#{request.host}:#{request.port.to_s+request.fullpath}" %>">Click Here</a>
  </p>

  <%= link_to 'Edit', edit_ride_path(@ride) %> |
  <%= link_to 'Back', rides_path %>
</section>