<h1>Listing rides</h1>

<table>
  <thead>
    <tr>
      <th>Departlocation</th>
      <th>Arrivelocation</th>
      <th>Departtime</th>
      <th>Arrivetime</th>
      <th>Seatsavailable</th>
      <th>Costperseat</th>
      <th>Preferences</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @rides.each do |ride| %>
      <tr>
        <td><%= ride.departlocation %></td>
        <td><%= ride.arrivelocation %></td>
        <td><%= ride.departtime %></td>
        <td><%= ride.arrivetime %></td>
        <td><%= ride.seatsavailable %></td>
        <td><%= ride.costperseat %></td>
        <td><%= ride.preferences %></td>
        <td><%= link_to 'Show', ride %></td>
        <td><%= link_to 'Edit', edit_ride_path(ride) %></td>
        <td><%= link_to 'Destroy', ride, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

